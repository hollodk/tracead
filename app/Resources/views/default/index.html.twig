{% extends 'base.html.twig' %}

{% block body %}
<script type="text/javascript">
// --- Required TraceAd internal variables ---
window.tracead_def_platform = 'manual'; // Do not change
window.tracead_def_trigger = 'SnoreStopper-ES-Sale'; // The unique name of the tracked page (e.g. 'Webshop Purchase')
window.sitetag_traceAmount = '{{ amount }}'; // The turnover generated by this purchase

// --- Required order details ---
window.sitetag_OrderID = '{{ order_id }}';
window.sitetag_OrderCurrency = '{{ currency }}';
window.sitetag_OrderCountry = '{{ country }}';

// --- Optional order details (check publisher requirements) ---
window.sitetag_OrderAmount = '{{ amount }}';
window.sitetag_OrderAmount_ExclVat_ExclShip = '{{ amount-tax_amount-shipping_amount }}';
window.sitetag_OrderAmount_InclVat_InclShip = '{{ amount }}';
window.sitetag_OrderAmount_InclVat_ExclShip = '{{ amount-shipping_amount }}';
window.sitetag_OrderAmount_ExclVat_InclShip = '{{ amount-tax_amount }}';
window.sitetag_ItemNumber = 'X';
window.sitetag_OrderUnits = 'X';
window.sitetag_OrderIP = 'X';
window.sitetag_OrderTime = 'X';
</script>
{% endblock %}
