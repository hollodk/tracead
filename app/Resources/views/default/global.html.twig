window.sitetag_OrderAmount_ExclVat_InclShip = '{{ amount-tax_amount }}';
window.sitetag_ItemNumber = 'X';
window.sitetag_OrderUnits = 'X';
window.sitetag_OrderIP = 'X';
window.sitetag_OrderTime = 'X';
</script>

<script type="text/javascript">
