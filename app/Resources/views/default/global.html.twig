window.sitetag_traceAmount = '{{ amount }}'; // The turnover generated by this purchase

// --- Required order details ---
window.sitetag_OrderID = '{{ order_id }}';
window.sitetag_OrderCurrency = '{{ currency }}';
window.sitetag_OrderCountry = '{{ country }}';

// --- Optional order details (check publisher requirements) ---
window.sitetag_OrderAmount = '{{ amount }}';
window.sitetag_OrderAmount_ExclVat_ExclShip = '{{ amount-tax_amount-shipping_amount }}';
window.sitetag_OrderAmount_InclVat_InclShip = '{{ amount }}';
